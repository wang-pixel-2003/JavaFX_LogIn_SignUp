<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.Controller.TareaFormularioController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Crear Tarea"/>
    <TextField fx:id="tituloField" promptText="Título"/>
    <TextField fx:id="descripcionField" promptText="Descripción"/>
    <TextField fx:id="prioridadField" promptText="Prioridad"/>
    <TextField fx:id="fechaVencimientoField" promptText="Fecha de Vencimiento"/>
    <TextField fx:id="estadoField" promptText="Estado"/>
    <Button text="Guardar" onAction="#saveTask"/>
</VBox>